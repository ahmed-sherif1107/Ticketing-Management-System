@model TicketManagementSystem.BLL.Models.TicketViewModel

@{
    ViewData["Title"] = "Edit Ticket";
}

<h1>Edit Ticket #@Model.TicketId</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Ticket Information</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TicketId" />
                    <input type="hidden" asp-for="CreatedDate" />
                    
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MobileNumber" class="form-label"></label>
                        <input asp-for="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="IssueTypeId" class="form-label"></label>
                        <select asp-for="IssueTypeId" class="form-select">
                            @foreach (var item in ViewBag.IssueTypes)
                            {
                                <option value="@item.IssueTypeId">@item.TypeName</option>
                            }
                        </select>
                        <span asp-validation-for="IssueTypeId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Priority" class="form-label"></label>
                        <select asp-for="Priority" class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Open">Open</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Resolved">Resolved</option>
                            <option value="Closed">Closed</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Back to List</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ticket Information</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Ticket ID</dt>
                    <dd class="col-sm-7">@Model.TicketId</dd>
                    
                    <dt class="col-sm-5">Created Date</dt>
                    <dd class="col-sm-7">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                    
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <dt class="col-sm-5">Last Modified</dt>
                        <dd class="col-sm-7">@Model.ModifiedDate.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                    }
                </dl>
                
                <div class="alert alert-info mt-3" role="alert">
                    <small>
                        <i class="fas fa-info-circle"></i> Changes made here will be immediately saved to the database upon submission.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 